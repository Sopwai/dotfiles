border-size = 0
border-color = ${colors.test}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = ProFontWindows:fontformat=truetype:size=11;1
font-1 = FontAwesome:fontformat=truetype:size=11;1

modules-left = i3
modules-center = date weather
modules-right = battery

tray-position = right
tray-padding = 9
tray-transparent = false
tray-offset-y = 0%
tray-offset-x = 0%
