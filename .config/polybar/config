;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;Weather
[module/weather]
type = custom/script
interval = 60

format-background = ${colors.background}
format = <label>
format-prefix = "   "
format-suffix = "  "
format-prefix-foreground = ${colors.foreground-alt}
exec = python3 ~/.config/polybar/weather.py
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;



